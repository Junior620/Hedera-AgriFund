# Environment Configuration for Hedera AgriFund
# Copy this file to .env and fill in your actual values

# Hedera Network Configuration
HEDERA_NETWORK=testnet
HEDERA_ACCOUNT_ID=0.0.YOUR_ACCOUNT_ID
HEDERA_PRIVATE_KEY=YOUR_PRIVATE_KEY_HERE

# Smart Contract Deployment
PRIVATE_KEY=YOUR_ETHEREUM_PRIVATE_KEY_HERE
HEDERA_API_KEY=YOUR_HEDERA_API_KEY

# Database Configuration (Backend)
DATABASE_URL=postgresql://username:password@localhost:5432/hedera_agrifund
SECRET_KEY=your-super-secret-key-change-in-production

# Flask Configuration
FLASK_ENV=development
FLASK_APP=app.py
PORT=5000

# IPFS Configuration
IPFS_HOST=localhost
IPFS_PORT=5001
IPFS_PROTOCOL=http

# External APIs
COMMODITY_PRICE_API_KEY=your-price-api-key
WEATHER_API_KEY=your-weather-api-key

# Hedera Consensus Service
HCS_TOPIC_ID=0.0.555555

# Platform Configuration
PLATFORM_FEE_RATE=100
MAX_LTV_RATIO=8500
LIQUIDATION_THRESHOLD=9000

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Redis Configuration (for background tasks)
REDIS_URL=redis://localhost:6379/0
